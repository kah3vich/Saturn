mixin designsOne()
    .designs
        .containers
            .designs__title Преимущества конструкции
            .designs-one__content
                .designs-one__list 
                    each _, i in Array(3)
                        +designsCard()
                .designs-one__icon 
                    img(src="./svg/designs/one.svg" alt="")
                .designs-one__list 
                    each _, i in Array(3)
                        +designsCard()

