mixin designsCard()
    .designs-card 
        .designs-card__number 1
        .designs-card__title Сталь от лидера рынка
        .designs-card__text Высококачественный металопрокат от лидера рынка

mixin designsThree()
    .designs
        .containers
            .designs__title Преимущества конструкции
            .designs-three__content
                .designs-three__icon 
                    img(src="./img/components/design/three.png" alt="")
                .designs-three__list 
                    each _, i in Array(12)
                        +designsElement()

mixin designsElement()
